{
  "name": "ebook-to-pdf",
  "version": "1.0.0",
  "description": "E-Book\uc744 PDF\ub85c \ubcc0\ud658\ud558\ub294 \ub370\uc2a4\ud06c\ud1b1 \uc560\ud50c\ub9ac\ucf00\uc774\uc158",
  "main": "dist/main.js",
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "dev": "webpack-dev-server --config webpack.config.js --mode development",
    "start": "npm run build && npx electron .",
    "icon": "bash scripts/generate-icons.sh",
    "package:mac": "npm run build && electron-builder build --mac && npm run zip",
    "package:win": "npm run build && electron-builder build --win && npm run zip",
    "package": "npm run build && electron-builder build --mac --win && npm run zip",
    "zip": "bash scripts/create-zips.sh"
  },
  "build": {
    "appId": "com.efforthye.ebook-to-pdf",
    "productName": "E-Book to PDF",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/sharp/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/efforthye/ebook-to-pdf.git"
  },
  "keywords": [
    "ebook",
    "pdf",
    "converter",
    "electron",
    "react",
    "typescript"
  ],
  "author": "efforthye",
  "license": "Apache-2.0",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/efforthye/ebook-to-pdf/issues"
  },
  "homepage": "https://github.com/efforthye/ebook-to-pdf#readme",
  "devDependencies": {
    "@types/node": "^24.7.0",
    "@types/pdfkit": "^0.17.3",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@types/sharp": "^0.31.1",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "html-webpack-plugin": "^5.6.4",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@emnapi/runtime": "^1.5.0",
    "i18next": "^25.5.3",
    "pdfkit": "^0.17.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.0.0",
    "sharp": "^0.34.4"
  }
}
